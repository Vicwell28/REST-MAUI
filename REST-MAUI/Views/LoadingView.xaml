<?xml version="1.0" encoding="utf-8" ?>
<ContentPage  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="REST_MAUI.Views.LoadingView"
              BackgroundColor="Blue"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="*,*" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" BackgroundColor="Orange">
        <ActivityIndicator Grid.Row="0" IsRunning="True" Color="Gray" />
        <Label Grid.Row="1" Text="Loading..." HorizontalOptions="CenterAndExpand" />
    </Grid>
            
</ContentPage>
